@page
@model PhoneShop.Pages.Products.IndexModel

@{
	var products = Model.Products;
}

<h1>@ViewData["Title"]</h1>

<form method="get" asp-page="Index" asp-page-handler="Search">
	<input placeholder="Nhập tên sản phẩm" asp-for="SearchString" />
	<input type="submit" value="Tìm kiếm" />
</form>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(Model => products[0].Name)
			</th>
			<th>
				@Html.DisplayNameFor(Model => products[0].Description)
			</th>
			<th>
				@Html.DisplayNameFor(Model => products[0].Price)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in products)
		{
			<tr>
				<td>
					<a asp-page="Details" asp-route-id="@item.Id">@Html.DisplayFor(Model => item.Name)</a>
				</td>
				<td>
					@Html.DisplayFor(Model => item.Description)
				</td>
				<td>
					@Html.DisplayFor(Model => item.Price)
				</td>
				<td>
					<a asp-page="Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-page="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
<hr />
<a class="btn btn-primary" asp-page="Create">
	Thêm sản phẩm
</a>
<a class="btn btn-primary" asp-page="Index" asp-page-handler="LoadAll">
	Nạp sản phẩm
</a>
<a class="btn btn-danger" asp-page="Index" asp-page-handler="RemoveAll">
	Xóa tất cả
</a>
